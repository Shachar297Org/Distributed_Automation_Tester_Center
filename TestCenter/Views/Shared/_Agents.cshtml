@model IEnumerable<TestCenter.ViewModels.AgentViewModel>

<div class="col-lg-12">
    <div class="page-title-box d-flex align-items-center">
        <div>
            <h4 class="mb-0 font-size-18">AGENTS</h4>
        </div>
        <div class="ml-auto">
            <button type="button" class="ml-auto btn btn-outline-secondary waves-effect" id="addAgentButton">Add Agent</button>
        </div>        
    </div>    
</div>

<div class="col-lg-12">
    <div class="">
        <div class="table-responsive">
            <table id="agents" class="table project-list-table table-nowrap table-centered table-borderless">
                <thead>
                    <tr>
                        <th scope="col" style="width: 100px"></th>
                        <th scope="col">NAME</th>
                        <th scope="col">IP ADDRESS</th>
                        <th scope="col">PORT</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agent in Model)
                    {
                    <tr>
                        <td><i class="bx bx-desktop" style="font-size: 28px; @(agent.Status == TestCenterConsole.Models.AgentStatus.OFFLINE ? "color: #DA4646;" : "color: #72BB53;")"></i></td>
                        <td><span class="text-dark">@agent.Name</span></td>
                        <td>
                            <span class="text-dark">@agent.IPAddress</span>

                        </td>
                        <td><span class="text-dark">@agent.Port</span></td>
                        <td><span class="badge @(agent.Status == TestCenterConsole.Models.AgentStatus.OFFLINE ? "badge-soft-danger" : "badge-soft-success")" style="font-size: 14px; cursor:pointer;" id="reloadStatus">@agent.Status.ToString()</span></td>

                        <td>
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-horizontal font-size-18"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#" id="agentSettings">Settings</a>
                                    <a class="dropdown-item text-secondary" href="#">Start</a>
                                    <a class="dropdown-item text-secondary" href="#">Stop</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal -->
<div id="addAgent" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agent Settings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

